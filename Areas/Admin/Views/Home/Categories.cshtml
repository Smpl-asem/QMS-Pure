@* card for show parnd cat  *@
<style>
 .card:hover {
      background-color: #ceddfa  !important;
     
    }

</style>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-xxl row">
    @if(@ViewBag.Categories != null){
        foreach(var item in ViewBag.Categories){
            <div class="card col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 m-2" >
                <div class="card-body text-center">
                    <h5 class="card-title alert alert-primary text-center">@item.CatName</h5>

                        @if(item.ParentId == 0){
                            <h6 class="card-subtitle mb-2 text-muted">دسته اصلی</h6>
                        }

                    <span class="card-link link-primary mt-2">کد : @item.CatCode</span> <br><br>
                        @if(item.ParentId==0){
                            <a href="/Admin/home/Categories/@ViewBag.Id?parentId=@item.Id" class="card-link btn btn-outline-primary form-control ">دسته های زیرین</a>
                            <br>
                        }
                        <small class="text-muted float-start primary-font mt-1">انتخاب به عنوان :</small>
                            <a href="/Admin/home/AddCategories/@ViewBag.Id?parentId=@item.ParentId&CatId=@item.Id&type=1" class="card-link btn btn-outline-dark form-control">فقط مشاهده</a>
                            <br>
                            <a href="/Admin/home/AddCategories/@ViewBag.Id?parentId=@item.ParentId&CatId=@item.Id&type=2" class="card-link btn btn-outline-dark form-control">فقط اضافه کننده</a>
                            <br>
                            <a href="/Admin/home/AddCategories/@ViewBag.Id?parentId=@item.ParentId&CatId=@item.Id&type=3" class="card-link btn btn-outline-dark form-control">اضافه کننده و مشاهده</a>

                </div>
            </div>
            <br>
        }
    }

    
    
    </div>
</div>