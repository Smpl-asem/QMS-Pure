<body>
  <!-- Content --> *@

  <div class="container">
    <div class="authentication-wrapper authentication-basic container-p-y">
      <div class=" py-4">
        <!-- Register Card -->
        <div class="card">
          <div class="card-body">
            <!-- Logo -->
            <div class="app-brand justify-content-center">
              <a href="index.html" class="app-brand-link gap-2">
                <span class="app-brand-text demo h3 mb-0 fw-bold">سیستم مدیریت کیفیت</span>
              </a>
            </div>
            <!-- /Logo -->
            <h4 class="mb-3 secondary-font"> ثبت نام</h4>
            <p class="mb-4">اطلاعات زیر را تکمیل کنید.</p>

            @if (ViewBag.Error != null)
            {
              <div class="alert alert-solid-danger alert-dismissible d-flex align-items-center" role="alert">
                <i class="bx bx-xs bx-error me-2"></i>
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            }
            @if (ViewBag.Result != null){
              <div class="alert alert-solid-success alert-dismissible d-flex align-items-center" role="alert">
                @ViewBag.Result
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            }

            <form class="mb-3" action="/Admin/home/Register" method="POST" enctype="multipart/form-data">


              <div class="row ">

                <div class="col-6">

                  <div class="mb-3">
                    <label for="FirstName" class="form-label">نام</label>
                    <input type="text" class="form-control text-start" id="FirstName" name="FirstName"
                      placeholder="نام خود را وارد کنید " dir="ltr" required>
                  </div>
                  <div class="mb-3">
                    <label for="LastName" class="form-label">نام خانوادگی</label>
                    <input type="text" class="form-control text-start" id="LastName" name="LastName"
                      placeholder="نام خانوادگی خود را وارد کنید " dir="ltr" required>
                  </div>


                  <div class="mb-3">
                    <label for="username" class="form-label">نام کاربری</label>
                    <input type="text" class="form-control text-start" id="username" name="username"
                      placeholder="نام کاربری خود را وارد کنید" autofocus dir="ltr" required>
                  </div>
                  <div class="mb-3">
                    <label for="phone" class="form-label">تلفن</label>
                    <input type="text" class="form-control text-start" id="phone" name="phone"
                      placeholder="تلفن همراه خود را وارد کنید" dir="ltr" required>
                  </div>
                  <div class="mb-3 form-password-toggle">
                    <label class="form-label" for="password">رمز عبور</label>
                    <div class="input-group input-group-merge">
                      <input type="password" id="password" class="form-control text-start" name="password"
                        placeholder="············" aria-describedby="password" dir="ltr" required>
                      <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                    </div>
                  </div>

                </div>

                <div class="col-6">
                  <div class="mb-3">
                    <label for="NatinalCode" class="form-label">کد ملی</label>
                    <input type="text" class="form-control text-start" id="NatinalCode" name="NatinalCode"
                      placeholder="کد ملی خود را وارد کنید " dir="ltr" required>
                  </div>
                  <div class="mb-3">
                    <label for="PerconalCode" class="form-label">کد پرسنلی</label>
                    <input type="text" class="form-control text-start" id="PerconalCode" name="PerconalCode"
                      placeholder="کد پرسنلی خود را وارد کنید " dir="ltr" required>
                  </div>
                  <div class="mb-3">
                    <label for="Addres" class="form-label">آدرس</label>
                    <input type="text" class="form-control text-start" id="Addres" name="Addres"
                      placeholder="آدرس خود را وارد کنید " dir="ltr" required>
                  </div>

                  <div class="mb-3">
                    <label for="ProfileImage" class="form-label">تصویر پروفایل</label>
                    <input type="file" class="form-control text-start" id="ProfileImage" name="Profile"
                      placeholder="تصویر پروفایل خود را انتخاب کنید " dir="ltr" required>
                  </div>
                </div>

              </div>






              <button class="btn btn-primary d-grid w-100" type="submit">عضویت</button>


            </form>
          </div>
        </div>
        <!-- Register Card -->
      </div>
    </div>
  </div>

  <!-- / Content -->

